#include "main.h"
/**
 *print_sign - begin here
 *@n: integer value
 *return 1 and print + if n is greater than zero
 *return 0,print0 if n=0
 *return -1 otherwise
 *Return: 0(Success)
 */
int print_sign(int n)
{
if (n > 0)
{
_putchar('+');
return (1);
}
else if (n == 0)
{
_putchar('0');
return (0);
}
else
{
_putchar('-');
 return(-1);
}
}
